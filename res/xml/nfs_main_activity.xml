<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:layout="@layout/style_version" />

	<PreferenceCategory
        android:title="@string/audio">

        <PreferenceScreen
            android:icon="@drawable/dirac_qs_tile_icon"
            android:title="@string/dirac_title"
            android:summary="@string/dirac_summary">
            <intent
                android:targetPackage="com.needforspeed.settings"
                android:action="android.intent.action.MAIN"
                android:targetClass="com.needforspeed.settings.dirac.DiracActivity" />
        </PreferenceScreen>

        <PreferenceScreen
            android:icon="@drawable/ic_headphone"
            android:title="@string/advanced_settings"
            android:summary="@string/advanced_summary">
            <intent
                android:targetPackage="com.needforspeed.settings"
                android:action="android.intent.action.MAIN"
                android:targetClass="com.needforspeed.settings.soundcontrol.SoundControlSettingsActivity" />
        </PreferenceScreen>

        <PreferenceScreen
            android:icon="@drawable/ic_speaker_cleaner_icon"
            android:title="@string/clear_speaker_title"
            android:summary="@string/clear_speaker_summary">
            <intent
                android:targetPackage="com.needforspeed.settings"
                android:action="android.intent.action.MAIN"
                android:targetClass="com.needforspeed.settings.speaker.ClearSpeakerActivity" />
        </PreferenceScreen>

    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="@string/display">

        <PreferenceScreen
            android:key="device_kcal"
            android:persistent="false"
            android:title="@string/device_kcal_title"
            android:icon="@drawable/ic_color">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.needforspeed.settings.KCalSettingsActivity"
                android:targetPackage="com.needforspeed.settings" />
        </PreferenceScreen>

        <PreferenceScreen
            android:icon="@drawable/ic_parts_device"
            android:title="@string/ambient_display_title">
            <intent
                android:targetPackage="com.needforspeed.settings"
                android:action="android.intent.action.MAIN"
                android:targetClass="com.needforspeed.settings.doze.DozeSettingsActivity" />
        </PreferenceScreen>

        <PreferenceScreen
            android:icon="@drawable/ic_torch_icon"
            android:title="@string/torch_title"
            android:summary="@string/torch_summary">
            <intent
                android:targetPackage="com.needforspeed.settings"
                android:action="android.intent.action.MAIN"
                android:targetClass="com.needforspeed.settings.torch.TorchSettingsActivity" />
        </PreferenceScreen>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/other" >

        <com.needforspeed.settings.preferences.SecureSettingSwitchPreference
            android:key="fastcharge"
            android:defaultValue="true"
            android:title="@string/fastcharge_title"
            android:icon="@drawable/ic_usb_fastcharge"
            android:summary="@string/fastcharge_summary" />

        <com.needforspeed.settings.preferences.SecureSettingSwitchPreference
            android:key="fpboost"
            android:defaultValue="true"
            android:title="@string/fpboost_title"
            android:icon="@drawable/ic_fpboost" />

        <com.needforspeed.settings.preferences.SecureSettingSwitchPreference
            android:key="fsync"
            android:defaultValue="true"
            android:title="@string/fsync_title"
            android:icon="@drawable/ic_fsync" />

        <com.needforspeed.settings.preferences.SecureSettingSwitchPreference
			android:key="fps_info"
			android:icon="@drawable/ic_fps_info"
			android:title="@string/fps_info_title"
			android:summary="@string/fps_info_summary"
			android:persistent="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="vibration"
        android:title="@string/vibration_title">

        <PreferenceScreen
            android:icon="@drawable/ic_vibrate"
            android:title="@string/vibration_title">
            <intent
                android:targetPackage="com.needforspeed.settings"
                android:action="android.intent.action.MAIN"
                android:targetClass="com.needforspeed.settings.vibration.VibrationActivity" />
        </PreferenceScreen>

    </PreferenceCategory>

</PreferenceScreen>
