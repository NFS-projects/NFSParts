<resources>
    <!-- xd. Preference -->
    <style name="xd_text_primary">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
    </style>

    <style name="xd_text_secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    
    <style name="xd_pref_card_sin">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">@dimen/xd_pref_card_horizontal_padding</item>
        <item name="android:layout_marginEnd">@dimen/xd_pref_card_horizontal_padding</item>
        <item name="android:background">@drawable/xd_pref_card_sin</item>
        <item name="android:clipToPadding">false</item>
    </style>
    
    <!-- xd. Firmware Header Style -->
    <style name="xd_pref_card_firmware-header">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">@dimen/xd_pref_card_horizontal_padding</item>
        <item name="android:layout_marginEnd">@dimen/xd_pref_card_horizontal_padding</item>
        <item name="android:background">@drawable/xd_pref_card_firmware-header</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- xd. Action Bar -->
    <style name="xd_toolbar.Expanded" parent="xd_toolbar.Collapsed">
        <item name="android:textSize">42dp</item>
        <item name="android:textColor">@color/settingslib_text_color_primary_device_default</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <style name="xd_toolbar.Collapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:fontFamily">@string/settingslib_config_headlineFontFamily</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/settingslib_text_color_primary_device_default</item>
    </style>
</resources>
